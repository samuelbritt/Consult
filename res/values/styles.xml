<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme, dependent on API level. This theme is replaced by AppBaseTheme from res/values-vXX/styles.xml on newer devices. -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!-- Theme customizations available in newer API levels can go in res/values-vXX/styles.xml, while customizations related to backward-compatibility can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextAppearance" parent="android:TextAppearance"></style>

    <style name="TextAppearance.Calculator_CheckboxLabel" parent="TextAppearance.Calculator_LabelSmall">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Calculator_LabelSmall" parent="TextAppearance.Calculator_Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">24dp</item>
        
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Calculator_UnitSmall" parent="TextAppearance.Calculator_Small">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="TextAppearance.Calculator_Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFAAAAAA</item>
        <!-- <item name="android:background">@drawable/border</item> -->
    </style>

    <style name="TextAppearance.Calculator">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF333333</item>
    </style>

    <style name="TextAppearance.Calculator_Value" parent="TextAppearance.Calculator">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">right</item>
        <item name="android:inputType">phone</item>
        <item name="android:selectAllOnFocus">true</item>
        <!-- <item name="android:background">@drawable/border</item> -->
    </style>

    <style name="DataSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingBottom">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:paddingTop">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        
<!--         <item name="android:background">@drawable/border</item> -->
    </style>
    
        <style name="DataSection.Narrow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:paddingTop">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        
<!--         <item name="android:background">@drawable/border</item> -->
    </style>

</resources>